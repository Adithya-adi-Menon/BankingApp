<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>customersServlet</servlet-name>
        <servlet-class>controllers.customersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewCustomerServlet</servlet-name>
        <servlet-class>controllers.viewCustomerServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>specificCustomer</servlet-name>
        <servlet-class>controllers.specificCustomer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>transactionServlet</servlet-name>
        <servlet-class>controllers.transactionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>transactionServlet</servlet-name>
        <url-pattern>/transact</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>customersServlet</servlet-name>
        <url-pattern>/customers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewCustomerServlet</servlet-name>
        <url-pattern>/viewcustomer</url-pattern>
    </servlet-mapping>

</web-app>